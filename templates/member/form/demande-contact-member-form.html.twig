{% if form is defined %}
      {{ form_start(form) }}
        <div class="my-custom-class-for-errors">
                {{ form_errors(form) }}
        </div>
        <div class="row">
            <div class="col s6">
                {{ form_row(form.prenom) }}
            </div>
            <div class="col s6">
                {{ form_row(form.nom) }}
            </div>
        </div>
        <div class="row">
            {{ form_row(form.email) }}
        </div>
        <div class="row">
            {{ form_row(form.telephone) }}
        </div>
        <div class="row">
            {{ form_row(form.motif_contact) }}
        </div>
        <div class="row right">
            {{ form_widget(form.save, { 'label': submit_label }) }}
        </div>
    {{ form_end(form) }}
{% endif %}
